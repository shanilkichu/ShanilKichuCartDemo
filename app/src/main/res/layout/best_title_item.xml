<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="130sp"
        android:layout_height="230dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imgCat"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_gravity="center|top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_margin="3sp"
                android:background="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/imgCat"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_margin="3sp"
                android:background="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/imgCat"
                app:layout_constraintStart_toEndOf="@+id/star1" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_margin="3sp"
                android:background="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/imgCat"
                app:layout_constraintStart_toEndOf="@+id/star2" />
            <TextView
                android:id="@+id/txtKm"
                android:layout_width="40sp"
                android:layout_height="15sp"
                android:background="@drawable/bg_light_grey"
                android:text="3 Km"
                android:alpha=".7"
                android:textStyle="bold"
                android:textSize="8sp"
                android:layout_marginRight="5sp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/imgCat"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/txtOriginalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00/-"
                android:visibility="visible"
                android:layout_margin="3sp"
                android:textColor="@color/grey"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgCat" />

            <TextView
                android:id="@+id/txtOfferAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:text="00.00 /-"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtOriginalAmount" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:text="Product Service \nTitle Product"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtOfferAmount" />

            <TextView
                android:id="@+id/txtoffer"
                android:layout_width="60sp"
                android:layout_height="20sp"
                android:background="@drawable/bg_light_orange"
                android:text="00%"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_margin="3sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgCat" />

            <ImageView
                android:id="@+id/imgLove"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_margin="10sp"
                android:background="@drawable/love"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>